def send_email(message, recipient, sender = "university.help@gmail.com" ):
    #1 Если адрес получателя и отправителя не содержит @ или ".com, .ru, .net"
    if '@' not in recipient or not recipient.endswith(('.com', '.ru', '.net'))\
        or '@' not in sender or not sender.endswith(('.com', '.ru', '.net')):
        print(f'Невозможно отправить письмо с адреса  {sender} на адрес {recipient}.')
    else:
        print(f'Отправляю сообщение "{message}" с адреса {sender} на адрес {recipient}')

#2 Если отправитель и получатель совпадают
    if sender == recipient:
        print('Нельзя отправить письмо самому себе!')

#3 Если отправитель по умолчанию university.help@gmail.com
    if sender == 'university.help@gmail.com':
        print(f'Письмо успешно отправлено с адреса {sender} на адрес {recipient}')
    else:
        print(f'НЕСТАНДАРТНЫЙ ОТПРАВИТЕЛЬ!\
         \nПисьмо отправлено с адреса {sender} на адрес {recipient}.')
